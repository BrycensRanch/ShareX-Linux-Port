<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapX.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:DataType="local:AboutWindow"
        Width="400" Height="300"

        Title="{Binding DialogTitle}"

        x:Class="SnapX.Avalonia.AboutWindow">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="{Binding Description}" />
        <TextBlock Text="{Binding Version}" />
        <TextBlock Text="{Binding Copyright}" />
        <TextBlock Text="{Binding License}" />
        <TextBlock Text="{Binding Website}" />
        <TextBlock Text="{Binding SystemInfo}" />
        <TextBlock Text="{Binding OsArchitecture}" />
        <TextBlock Text="{Binding Runtime}" />
        <TextBlock Text="{Binding OsPlatform}" />
    </StackPanel>
</Window>

